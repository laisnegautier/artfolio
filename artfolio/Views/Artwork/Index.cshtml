@model ArtworkIndexViewModel
@{
    ViewData["Title"] = Model.Artwork.Title + ", by " + @Model.Artist.Firstname + " " + @Model.Artist.Lastname;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string formatToImg(string acromym)
    {
        return acromym + ".sm.png";
    }
}

    <section class="col-md-8 mx-auto artwork-large">
        <!-- Title -->
        <h1>@Model.Artwork.Title</h1>
        <h4>by @Model.Artist.Firstname @Model.Artist.Lastname</h4>
        @*<div asp-validation-summary="All"></div>*@

        <hr />

        <div class="row p-0">
            <div class="col-md-8 d-flex justify-content-center align-items-center">
                @if (Model.Artwork.Documents != null && Model.Artwork.Documents.Count > 0)
                {
                    <img class="artwork-large-img" style="max-width: 100%;" src="~/artworks/picture/@Model.Artwork.Documents[0].FilePath" alt="@Model.Artwork.Title, by @Model.Artist.Firstname @Model.Artist.Lastname">
                }
            </div>

            <div class="col-md-4 d-flex flex-column">

                <div class="profile-pic-nav d-none d-lg-flex justify-content-end" style="overflow: hidden; width: 40px; height: 40px; display: flex; justify-content: center; align-items: center">
                    <img src="~/images/avatars/thumbnails/@Model.Artist.PhotoFilePath" width="80" style="margin: auto" alt="profile picture" />
                </div>
                <h4 class="text-md-right" small text-muted">@Model.Artist.UserName</h4>
                <div class="d-flex justify-content-end">
                    @if (Model.Artwork.ArtworkTags.Count > 0)
                    {
                        <p>
                            Tags :
                            @foreach (var artworkTag in Model.Artwork.ArtworkTags)
                            {
                                <span class="tag">@artworkTag.Tag.Name</span>
                            }
                        </p>
                    }
                </div>

                <h5>@Model.Artwork.Description</h5>
                <h6 class="small">@Model.Artwork.Category, released @Html.DisplayFor(modelItem => Model.Artwork.ReleaseDate)</h6>
                <img style="width: 70px" src="~/images/ccicons/@formatToImg(Model.Artwork.CCLicense.Acronym)" alt="CC @Model.Artwork.CCLicense.Title License" title="CC @Model.Artwork.CCLicense.Title License" />

                @if (Model.Artwork.Collection != null)
                {
                    <p>Collection : @Model.Artwork.Collection.Name</p>
                }
                <hr />
                <a href="">Report an issue with this artwork (not functional)</a>

                <hr />
                <div>
                    <h3>Supports</h3>
                    <form asp-controller="Artwork" asp-action="Index" method="post">
                        <input type="hidden" asp-for="@Model.ArtworkId" value="@Model.Artwork.ArtworkId" />
                        <label asp-for="Support.Content" class="control-label"></label>
                        <textarea asp-for="Support.Content" class="form-control"></textarea>
                        <span asp-validation-for="Support.Content" class="text-danger"></span>
                        <input type="submit" value="support" class="btn btn-artfolio" />
                    </form>

                    @if (Model.Artwork.Supports.Count > 0)
                    {
                        @foreach (var support in Model.Artwork.Supports)
                        {
                            <ul>
                                <li>Support by @support.Artist.Firstname @support.Artist.Lastname</li>
                                <li>@support.Content</li>
                                <li><em>Posted on @support.CreationDate</em></li>
                            </ul>
                        }
                    }
                    else
                    {
                        <h5 class="small"><b>be the 1st to support</b></h5>
                    }
                </div>
            </div>
        </div>
    </section>