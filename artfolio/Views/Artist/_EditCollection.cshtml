@model Collection
@inject UserManager<Artist> UserManager
@{
    string nameDiv = "editCollection" + Model.CollectionId;
}

<div class="modal fade" id="@nameDiv" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLongTitle">Edit the collection</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form class="artfolio-content" asp-controller="Artist" asp-action="EditCollection" method="post">
                    <input type="hidden" asp-for="@Model.CollectionId" value="@Model.CollectionId" />

                    <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control" value="@Model.Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <textarea asp-for="@Model.Description" class="form-control" value="@Model.Description"></textarea>
                    </div>

                    <div class="form-group d-flex justify-content-center">
                        <button type="submit" class="btn btn-artfolio" style="margin-top: 10px;">edit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>