<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700&display=swap"
          rel="stylesheet" />

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/favicon.ico" rel="icon" type="image/x-icon" />

    <link rel="stylesheet" href="~/css/tagsinput.css" type="text/css" />
    <link rel="stylesheet" href="~/css/animate.css" type="text/css" />

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/bootstrap.custom.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body class="body-home animated fadeIn">

    <header>
        <nav>
            @if (String.IsNullOrEmpty((string)ViewData["home"]))
            {
                <!-- Logo -->
                <a class="brand brand-short" asp-area="" asp-controller="Home" asp-action="Index"><span>a</span>f</a>
                <a class="brand brand-long" asp-area="" asp-controller="Home" asp-action="Index"><span>art</span>folio</a>

                <!-- Search bar -->
                <form class="my-auto d-inline search-box" asp-controller="Discover" asp-action="Index" method="get">
                    <div class="input-group px-2 py-1">
                        <img src="~/images/icons/search-outline.svg" width="20" class="m-2" />
                        <input name="q" class="form-control mr-md-2 form-artfolio" type="text" value="@ViewData["q"]" placeholder="search for an artist, an artwork...">
                        <span class="input-group-append">
                            <button class="btn btn-artfolio btn-category" type="submit">
                                <img src="~/images/icons/arrow-forward-outline.svg" width="20" />
                            </button>
                        </span>
                    </div>
                </form>
            }
            <!-- Profile Management -->
            <partial name="_LoginPartial" />
        </nav>
    </header>

    <main class="home-main">
        <div class="centered col-12 col-md-10">
            <h1 class="home-brand font-weight-light d-none d-lg-block"><span style="color: #F9A585;">art</span>folio</h1>
            <form asp-controller="Discover" asp-action="Index" method="get" class="form-inline my-lg-0 search-box-header px-1 py-1 col-lg-9 col-xl-6">
                <div class="col-10 d-flex flex-row col-sm-9 col-lg-10">
                    <img src="~/images/icons/search-outline.svg" width="20" class="d-inline-block" />
                    <input class="form-control mr-md-2 form-artfolio" type="search" name="q" placeholder="search for an artist, an artwork...">
                </div>
                <button class="btn btn-artfolio my-0 btn-category" type="submit">
                    <img src="~/images/icons/arrow-forward-outline.svg" width="20" />
                </button>
            </form>

            <partial name="_CookieConsentPartial" />
        </div>
    </main>

    <div class="discover-link">
        <a asp-area="" asp-controller="Discover" asp-action="Index">
            artwork of the day :
            <br />
            see more !
            <img src="~/images/design/home/arrowDown.svg" />
        </a>
    </div>

    <footer class="footer footer-home">
        <ul class="d-flex flex-row list-unstyled col-12 justify-content-end">
            <li><a asp-area="" asp-controller="Home" asp-action="Contact">contact</a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Privacy">privacy</a></li>
            <li class="muted">artfolio - 2020</li>
        </ul>
    </footer>

    <div style="display: none">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>