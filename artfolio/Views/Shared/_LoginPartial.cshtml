@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link sign-in-btn" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
            </li>
            <li class="nav-item ml-4">
                <a class="nav-link sign-up-btn" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
            </li>
            <li class="nav-item ml-4">
                <a class="nav-link img-not-connected-btn" asp-area="Identity" asp-page="/Account/Register">
                    <div class="img-not-connected"></div>
                </a>
            </li>
        }
    </ul>
