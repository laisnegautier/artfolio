@page
@model IndexModel
@{
    ViewData["Title"] = "your account";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<section class="w-100 mx-auto artfolio-container">

    <!-- Title -->
    <h1 class="artfolio-container-header">@ViewData["Title"]</h1>

    <!-- Content -->
    <form id="profile-form" class="artfolio-content" method="post">
        <partial name="_StatusMessage" model="Model.StatusMessage" />
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-center">
            <button id="update-profile-button" type="submit" class="btn btn-artfolio" style="margin-top: 10px;">save</button>
        </div>
    </form>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
}
