            <input asp-for="Input.AspNetUser.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.AspNetUser.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-inline">
            <label asp-for="Input.Artist.IsPubliclyVisible"></label>
            <input type="radio" asp-for="Input.Artist.IsPubliclyVisible" value="true" id="IsPubliclyVisible" checked />Yes<br />
            <input type="radio" asp-for="Input.Artist.IsPubliclyVisible" value="false" id="IsPubliclyVisible" />No<br />
            <span asp-validation-for="Input.Artist.IsPubliclyVisible" class="text-danger"></span>
        </div>

        <div class="form-group d-flex justify-content-center">
            <button type="submit" class="btn btn-artfolio">create your account</button>
        </div>
    </form>
</section>

